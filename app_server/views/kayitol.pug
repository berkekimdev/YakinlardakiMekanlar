extends layout

block content
  #banner.page-header 
    .row 
      .col-lg-6
        h1 
          | #{title}
          small &nbsp; MekanBul'a Kayıt Ol!
  
  .row 
    .col-xs-12.col-md-6 
      form.form-horizontal(action='',method='post',role='form',id='kayitOl')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='adsoyad') Ad Soyad 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='adsoyad')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='eposta') E-posta 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='eposta')
        .form-group 
          label.col-xs-10.col-sm-2.control-label(for='sifre') Şifre 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='sifre')
        button.btn.btn-default.pull-right(href="/api/kayitol") Kayıt Ol
    .col-xs-12.col-md-4
  
