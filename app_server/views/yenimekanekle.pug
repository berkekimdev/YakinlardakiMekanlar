extends layout

block content
  #banner.page-header 
    .row 
      .col-lg-6
        h1 
          | #{title}
          small &nbsp; Yeni Mekan Ekle!
  
  .row 
    .col-xs-12.col-md-6 
      form.form-horizontal(action='',method='post',role='form',id='')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='ad') Mekan Adı
          .col-xs-12.col-sm-10 
            input#name.form-control(name='ad')
        .form-group 
          label.col-xs-10.col-sm-2.control-label(for='adres') Adres 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='adres')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='imkanlar') İmkanlar 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='imkanlar')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='enlem') Enlem 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='enlem')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='boylam') Boylam
          .col-xs-12.col-sm-10 
            input#name.form-control(name='boylam')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='gunler1') Günler-1 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='gunler1')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='acilis1') Açılış-1 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='acilis1')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='kapanis1') Kapanış-1 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='kapanis1')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='kapali1') Kapalı-1
          .col-xs-12.col-sm-10 
            input#name.form-control(name='kapali1')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='gunler2') Günler-2 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='gunler2')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='acilis2') Açılış-2 
          .col-xs-12.col-sm-10 
            input#name.form-control(name='acilis2')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='kapanis2') Kapanış-2
          .col-xs-12.col-sm-10 
            input#name.form-control(name='kapanis2')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='kapali2') Kapalı-2
          .col-xs-12.col-sm-10 
            input#name.form-control(name='kapali2')
        button.btn.btn-success.pull-right.badge-default(href="/yenimekanekle") Mekan Ekle
    .col-xs-12.col-md-4   